package edu.monmouth.musicalInstrument;
import java.util.ArrayList;

public class MusicalSupply  implements MusicShopItem {

	 private String name;
	    private double price;
	    private ArrayList<MusicShopItem> associatedItems;

	    public MusicalSupply() {
	        this(MusicalSupplyConstants.UNKNOWN_NAME,
	             MusicalSupplyConstants.UNINITIALIZED_PRICE);
	    }

	    public MusicalSupply(String name, double price) {
	        setName(name);
	        setPrice(price);
	        associatedItems = new ArrayList<>();
	    }

	    public String getName() {
	        return name;
	    }

	    public double getPrice() {
	        return price;
	    }

	    public void setName(String name) {
	        if (name == null || name.isEmpty()) {
	            this.name = MusicalSupplyConstants.UNKNOWN_NAME;
	        } else {
	            this.name = name;
	        }
	    }

	    public void setPrice(double price) {
	        if (price < MusicalSupplyConstants.MIN_PRICE
	                || price > MusicalSupplyConstants.MAX_PRICE) {
	            this.price = MusicalSupplyConstants.UNINITIALIZED_PRICE;
	        } else {
	            this.price = price;
	        }
	    }

	    @Override
	    public String toString() {
	        return "Supply[name=" + name + ", price=" + price + "]";
	    }

	    @Override
	    public ArrayList<MusicShopItem> getAssociatedItems() {
	        return associatedItems;
	    }

	    @Override
	    public void addAssociatedItem(MusicShopItem item) {
	        if (item != null) {
	            associatedItems.add(item);
	        }
	    }
}
